{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "../lib",
    "declaration": true
  },
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}